#include<iostream> 
using namespace std;
int main(){

    int n;
    cout<<"enter the number of rows: ";
    cin>>n;
    
    for(int i=1; i<=n; i++){
        for(int j=1; j<=(n-i); j++){
            cout<<" ";
        }
        for(int k=1; k<=(2*i-1); k++){
            cout<<"*";
        }
        cout<<endl;
    }
    return 0;
}



output:

enter the number of rows: 7
      1
     123
    12345
   1234567
  123456789
 1234567891011
12345678910111213
